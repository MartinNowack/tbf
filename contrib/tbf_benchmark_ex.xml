<benchmark tool="tbf" timelimit="900s" hardtimelimit="950s" cpuCores="2" memlimit="15GB">

    <resultfiles>**harness.c</resultfiles>

  <rundefinition name='klee_ex'>
    <option name='-i'>klee</option>
